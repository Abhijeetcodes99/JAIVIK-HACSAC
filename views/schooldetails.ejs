  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light naving fixed-top">
        <a class="navbar-brand" href="/"><img src="../images/jaiviks.PNG" class="img-responsive logo"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/"><b>Home</b></a>
            </li>
			   <% if(!currentUser){ %>
            <li class="nav-item">
              <a class="nav-link" href="/registerschool"><b>Register</b></a>
            </li>
			  <li class="nav-item">
              <a class="nav-link" href="/loginschool"><b>Login</b></a>
            </li>
			   <% } else { %>
			   <li class="nav-item">
				   <a class="nav-link" href="#">Signed In As <%= currentUser.username %></a></li>
